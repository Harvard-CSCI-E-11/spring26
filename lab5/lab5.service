### /etc/systemd/system/lab5.service ###
[Unit]
Description=Gunicorn instance to serve Flask application for lab 5
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/spring26/lab5
Environment="PATH=/home/ubuntu/spring26/lab5/.venv/bin"
ExecStart=/home/ubuntu/spring26/lab5/.venv/bin/gunicorn -w 2 -b 127.0.0.1:8005 --reload server:app
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
