### /etc/systemd/system/lab4.service ###
[Unit]
Description=Gunicorn instance to serve Flask application for lab 4
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/spring26/lab4
Environment="PATH=/home/ubuntu/spring26/lab4/.venv/bin"
ExecStart=/home/ubuntu/spring26/lab4/.venv/bin/gunicorn -w 2 -b 127.0.0.1:8004 --reload server.main:app
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
