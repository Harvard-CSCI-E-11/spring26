### install in /etc/systemd/system/lab3.service ###
[Unit]
Description=Gunicorn instance to serve Flask application for Lab 3
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/spring26/lab3
Environment="PATH=/home/ubuntu/spring26/lab3/.venv/bin"
ExecStart=/home/ubuntu/spring26/lab3/.venv/bin/gunicorn -w 2 -b 127.0.0.1:8003 --reload simple_flask_application:app
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
